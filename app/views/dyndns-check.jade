section.page-block
	.container(ng-controller="DyndnsCheckCtrl")
		.row
			.col-md-12
				h1(translate="dyndnscheck.headline")
				p(translate="dyndnscheck.intro")
				
		.row
			.col-md-12
				h3.text-center(ng-show="loading")
					span.icon-spinner.spinner
				
				.alert.alert-success(ng-show="domain.a.length>0||domain.aaaa.length>0")
					h4(translate="dyndnscheck.success.headline",translate-values="{domainname:domainname}")
					p(translate="dyndnscheck.success.text",translate-values="{ipaddr:ipaddr}")
					p(translate="dyndnscheck.success.ipv6only",ng-show="domain.a.length==0")
					
				.alert.alert-warning(ng-show="domain.a.length==0&&domain.aaaa.length==0")
					h4(translate="dyndnscheck.error.headline",translate-values="{domainname:domainname}")
					p(translate="dyndnscheck.error.text")
					
		.row
			.col-md-4.col-md-offset-4
				button.btn.btn-primary.btn-lg.btn-block(ng-click="check()",translate="dyndnscheck.check",analytics-on="click",analytics-event="used",analytics-category="dyndnscheck")
				
